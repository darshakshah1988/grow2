            </li>
          </ul>
          <div class="legal__small">
            <p class="pressed">
            <small><a href="#">Terms &amp; Conditions</a> | Grow2 Â© 2020</small>
            </p>
            <p>
            <small>Built by <a href="https://dcubed.com.au">DCUBED</a></small>
            </p>
          </div>
        </div>
      </div>
    </div>
    <script>
      document.addEventListener("DOMContentLoaded", function() {

        const toggleOptions = document.querySelectorAll(".toggle__option");
        const triangle = document.querySelector("#triangle");
        const dropdown = document.getElementById('linksDropdown');
        const looped = document.getElementById('looped');
        const heroBg = document.getElementById('hero-bg');
        const headings = [
          'rugby league',
          'soccer',
          'rugby union',
          'athletic',
          'swimming',
          'hockey',
          'gridiron',
          'cricket',
          'lawn bowls',
          'basketball',
          'netball',
          'tennis',
          'hockey'
        ];
        let headingIndex = 0;

        toggleOptions.forEach(function(option) {
          option.addEventListener("click", function(e) {
            document.querySelector(".toggle__option--on").classList.remove("toggle__option--on");
            e.target.classList.add("toggle__option--on");
            if(e.target.dataset.toggle === "school") {
              triangle.classList.remove("triangle--club");
              triangle.classList.add("triangle--school");
            }
            if(e.target.dataset.toggle === "club") {
              triangle.classList.remove("triangle--school");
              triangle.classList.add("triangle--club");
            }
          });
        });

        dropdown.querySelector('.dropdown__toggle').addEventListener('click', function(e) {
          e.preventDefault;
          dropdown.classList.toggle('dropdown--open');
        })


        const intervalId = setInterval(function() {
          looped.innerHTML = '<i>' + headings[headingIndex] + '</i>';
          if (headingIndex == (headings.length - 1)) {
            headingIndex = 0;
            //you can even clear interval here to make heading stay as last one in array
            //cleanInterval(intervalId);

          } else {
            headingIndex++;
          }
        }, 3000)

        heroBg.onload = () => {
          heroBg.classList.add('hero__bg--visible');
        }

        heroBg.src = 'landing/images/bg.png';

      });

      document.getElementById("signup-form").addEventListener("submit", function(e) {
        e.preventDefault();
        const email = document.getElementById('signup-email').value;
        $.ajax({
          url: "/register",
          method: "POST",
          data: {
            name: document.getElementById('signup-company').value,
            first_name: document.getElementById('signup-first').value,
            last_name: document.getElementById('signup-last').value,
            email: email
          },
          beforeSend: function() {
            document.getElementById('signup-form').classList.add('signup-form--loading');
            document.getElementById('signup-form-action').setAttribute('disabled', true);
          },
          success: function( result ) {
            document.getElementById('signup-form').classList.add('signup-form--success');
            document.getElementById('signup-form-to').innerHTML = email;
          },
          error: function( err ) {
            document.getElementById('signup-form').classList.add('signup-form--error');
          }
        });
      })

    </script>
  </body>

</html>
